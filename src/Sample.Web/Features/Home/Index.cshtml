@using Sample.Web.Features.Home
@inject IContextModeResolver contextModelResolver
@model HomeViewModel

<main class="pt-5 pb-5 md:py-5 relative overflow-hidden">
    @Html.PropertyFor(x => x.CurrentContent.MainContentArea, new { cssClass="flex flex-row flex-wrap"})
   
    <div class="container">
        @if ((Model.CurrentContent.MainBody != null && !Model.CurrentContent.MainBody.IsEmpty) || contextModelResolver.CurrentMode == ContextMode.Edit)
        {
            <div>
                @Html.PropertyFor(m => m.CurrentContent.MainBody)
            </div>
        }
    </div>
</main>

