@using Sample.Models
@using EPiServer.Web.Mvc.Html
@model Sample.Models.ViewModels.PreviewPageViewModel
@{
    Layout = null;
}
<head>
    <title>@(Model.CurrentContent.MetaTitle ?? Model.CurrentContent.Name)</title>
    <link rel="stylesheet" href="@Url.Content("~/Static/css/bootstrap.css")" />
    <link rel="stylesheet"
          href="@Url.Content("~/Static/css/bootstrap-responsive.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/media.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Static/css/editmode.css")" />
    <script src="@Url.Content("~/js/Vendors/jquery-3.5.1.min.js")"></script>
    <script src="@Url.Content("~/js/Vendors/bootstrap.min.js")"></script>
</head>
<body>
    <div class="container">
        <div class="well well-large">
            <div class="row">
                <div class="alert alert-info">Display Option: Full (default)</div>
            </div>
            <div class="row">
                @Html.DisplayFor(m => m.PreviewArea, new { Tag = Global.ContentAreaTags.FullWidth })
            </div>
        </div>
    </div>
</body>